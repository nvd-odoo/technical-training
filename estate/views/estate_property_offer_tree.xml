<odoo>
    <record id="estate_property_offer_list" model="ir.ui.view">
        <field name="name">real.estate.offer.view.list</field>
        <field name="model">real.estate.offer</field>
        <field name="arch" type="xml">
            <list string="Real Estate Offers">
                <field name="name" string="Offer" />
                <field name="price"/>
                <field name="partner_id"/>
                <field name="property_id"/>  
                <field name="status"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <button name="accept_offer" type="object" string="Accept" icon="fa-time" />
                <button name="refuse_offer" type="object" string="Refuse" icon="fa-check" />
            </list>
        </field>
    </record>
</odoo>